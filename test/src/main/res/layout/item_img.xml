<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <com.clyr.test.view.MyViewPager
        android:id="@+id/vp_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <TextView
        android:visibility="gone"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/transblack"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingRight="9dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon_head"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/icon_head" />

            <ImageView
                android:id="@+id/focus_author"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="41dp"
                android:background="@drawable/circle_bg_red"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/add_white" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_like"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/icon_heart_nolike" />

            <TextView
                android:id="@+id/like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:text="12.3W"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_message"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/icon_message" />

            <TextView
                android:id="@+id/message_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:text="12.3W"
                android:textColor="@color/white" />
        </LinearLayout>

        <ImageView
            android:id="@+id/icon_start"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/icon_start" />

        <ImageView
            android:id="@+id/icon_share"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/icon_share" />
    </LinearLayout>

</RelativeLayout>